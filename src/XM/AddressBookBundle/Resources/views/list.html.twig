{% extends "XMAddressBookBundle::index.html.twig" %}

{% block body %}

    <div class="well">
        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Téléphone</th>
                <th>Email</th>
                <th>Ville</th>
                <th>Adresse</th>
                <th>Site internet</th>
            </tr>
            </thead>
            <tbody>
            {% for contact in contacts %}
            <tr>
                <td>{{ contact.name }}</td>
                <td>{{ contact.phoneNumber }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.city }}</td>
                <td>{{ contact.street }}</td>
                <td>{{ contact.website }}</td>
                <td><a href="{{ path("address_book_contact_edit", { 'id': contact.id }) }}">Editer</a></td>
                <td><a href="{{ path("address_book_contact_delete", { 'id': contact.id }) }}">Supprimer</a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}